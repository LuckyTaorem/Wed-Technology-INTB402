@{
}

@model StudentManagement.web.Models.Entities.Student

<h1>Edit Student</h1>

@if(Model is null)
{
    <p>No Student was found on this ID</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <label class="form-label">Course</label>
            <input type="text" class="form-control" asp-for="Course" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger" asp-controller="Student" asp-action="Delete">Delete</button>
        </div>
    </form>
}